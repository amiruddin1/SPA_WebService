@using authetication.Models
@model TBLUser
@{
    ViewBag.Title = "Login";
}
@{
    if (ViewData["VerificationError"] != null)
    {
        @Html.Raw("<script>alert('" + ViewData["VerificationError"] + "')</script>")
    }
}


<h2>Login</h2>

<div class="row">
    <div class="col-3"></div>
    @using (Html.BeginForm("DoLogin", "Home", FormMethod.Post, new
    {
        Class = "col-6"
    }))
    {
        <div class="row">

            <div class="col-12" style="text-align:left">
                <label>User Name:</label>
            </div>
            <div class="col-8">
                @Html.TextBoxFor(a => a.UserName, new { Class = "form-control" })
            </div>
            <div class="col-12 mt-2" style="text-align:left">
                <label>Password:</label>
            </div>
            <div class="col-8">
                @Html.TextBoxFor(a => a.Password, new { Class = "form-control mt-2" })
            </div>
            <div class="col-12 mt-3">
                <input type="submit" value="Login" class="mx-auto d-block btn btn-dark" />
            </div>
        </div>
    }
    <div class="col-3"></div>
</div>